<% layout('layout') -%>

<section class="banner-area relative about-banner" id="resources">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center">
			<div class="about-content col-lg-12">
				<p>
					<h1 class="text-white">RESOURCES</h1>
				</p>
			</div>
		</div>
	</div>
</section>

<div class="p50-wrapper row">
	<% resources.forEach(function (resource) { %>
	<div class="col-md-6">
		<div class="card bg-light mb-3">
			<a href="<%= resource.url %>" class="btn btn-fix ">
				<div class="card-block ">
					<h4 class="card-title">
						<%= resource.title %>
					</h4>
					<p class="card-text">
						<%= resource.info %>
					</p>
				</div>
			</a>
		</div>
	</div>
	<% }); %>
</div>